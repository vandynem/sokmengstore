<div class="module {{ class_suffix }} so-popular-tag">
	{% if pre_text|trim is not empty %}
		<div class="form-group">
			{{ pre_text }}
		</div>
	{% endif %}
	{% if disp_title_module %}
	<h3 class="modtitle">
		<span>{{ head_name }}</span>
	</h3>
	{% endif %}
	<div class="modcontent">	
		{% if data %}
			{{ data }}
		{% else %}
			<p>{{ text_notags }}</p>
		{% endif %}
	</div>
	{% if post_text|trim is not empty %}
		<div class="form-group">
			{{ post_text }}
		</div>
	{% endif %}
</div>