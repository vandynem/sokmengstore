
	{% if type_show == 'simple' %}
	<div class="item">
		{% if blog.thumb and blog_image %}
			<div class="media-left">
				<a href="{{ blog.link }}" target="{{ item_link_target }}">
					<img data-sizes="auto" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ blog.thumb }}" alt="{{ blog.title  }}" class="lazyload">
				</a>
			</div>			
		{% endif %}
		
		<div class="media-body">
			{% if display_title %}
				<h4 class="media-heading">
					<a href="{{ blog.link }}" title="{{ blog.title }}" target="{{ item_link_target }}">{{ blog.title_maxlength }}</a>
				</h4>
			{% endif %}
			<div class="media-content">
				
				{% if display_author or display_comment or display_view %}
					<div class="media-subcontent">
						{% if display_author %}
							<span class="media-author">{{ blog.author }}</span>
						{% endif %}
						{% if display_comment %}
							<span class="media-comment">{{ blog.comment_count }} {{ blog.text_comment }}<span class="delimiter">|</span></span>
						{% endif %}
						
						
						{% if display_view %}
							<span class="media-view">{{ blog.view_count }} {{ blog.text_view }}</span>
						{% endif %}
					</div>
				{% endif %}
				{% if display_description %}
					<div class="description">
						{{ blog.description|striptags|slice(0, 200) }}
					</div>
				{% endif %}		
				
				
				{% if display_readmore %}
					<div class="readmore">
						<a href="{{ blog.link }}" target="{{ item_link_target }}" class="readmore">{{ readmore_text }}</a>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
	{% else %}
	
		<div class="item">
			<div class="media-left">
				{% if blog_image %}		
					<a href="{{ blog.link }}" target="{{ item_link_target }}">
						<img src="{{ blog.thumb }}" alt="{{ blog.title }}" />
					</a>
				{% endif %}
				
				{% if display_date_added %}					
					<div class="media-date-added">
						<span>{{ blog.date_modified|date("j") }}</span>
						<span class="post-y">{{ blog.date_modified|date("M")}}</span>
					</div>
				{% endif %}
				
			</div>
			<div class="media-body">
				<div class="media-content">

					{% if display_title %}
						<h4 class="media-heading font-title">
							<a href="{{ blog.link }}" title="{{ blog.title }}" target="{{ item_link_target }}">{{ blog.title_maxlength }}</a>
						</h4>
					{% endif %}
					
					
					{% if display_author or display_comment or display_view %}
						<div class="media-subcontent">
							{% if display_author %}
								<span class="media-author"><i class="fa fa-user"></i> {{text_posted_by}} {{ blog.author|capitalize }}</span>
							{% endif %}
							{% if display_comment %}
								<span class="media-comment"><i class="fa fa-comments"></i> {{ blog.comment_count }} {{ blog.text_comment }}<span class="delimiter"></span></span>
							{% endif %}					
							
							{% if display_view %}
								<span class="media-view">{{ blog.view_count }} {{ blog.text_view }}</span>
							{% endif %}
						</div>
					{% endif %}

					{% if display_description %}
						<div class="description">
							{{ blog.description|striptags|slice(0, 200) }}
						</div>
					{% endif %}
					{% if display_readmore %}
						<div class="readmore font-title">
							<a href="{{ blog.link }}" target="{{ item_link_target }}" class="readmore">{{ readmore_text }} <i class="fa fa-angle-double-right"></i></a>
						</div>
					{% endif %}
				</div>
			</div>
    	</div>
	{% endif %}
